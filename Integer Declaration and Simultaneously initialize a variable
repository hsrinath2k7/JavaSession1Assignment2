
// Declare three Integers In Single Declaration and simultaneously Initialize

public class IntInitializeSimultaneously {

	
	public static void main(String[] args) {
		// Declare three Integers & Simultaneously initialize b to 4       
		int a,b=4,c;
		
		//Initializing 'a' & 'c' with 'b'
		a=c=b;
		 
		 System.out.println("Value of a:" + a);
		 
		 System.out.println("Value of b:" + b);
		 
		 System.out.println("Value of c:" + c);
		
	}

}
